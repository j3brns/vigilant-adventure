# -----------------------------------------------------------------------------
# Development Environment - Example Variable Values
# -----------------------------------------------------------------------------
# Copy this file to terraform.tfvars and update with your values.
# Never commit terraform.tfvars to version control.
# -----------------------------------------------------------------------------

aws_region = "eu-west-2"

# VPC endpoints for OpenSearch Serverless (if using VPC access)
vpc_endpoint_ids = []

# Principals allowed to assume platform operations role
# Typically your CI/CD pipeline role and admin users
platform_admin_principals = [
  "arn:aws:iam::123456789012:role/gitlab-ci-role",
  "arn:aws:iam::123456789012:role/admin-role"
]

# Authentication - update with your identity provider details
jwks_uri     = "https://your-idp.example.com/.well-known/jwks.json"
token_issuer = "https://your-idp.example.com"

# API Gateway - update after Gateway is created
api_gateway_execution_arn = "arn:aws:execute-api:eu-west-2:123456789012:abcdef1234/*"

# GitLab
gitlab_base_url            = "https://gitlab.internal"
gitlab_token               = "glpat-xxxxxxxxxxxxxxxxxxxx" # Use environment variable instead
create_gitlab_repos        = true
gitlab_tenant_namespace_id = 123  # GitLab group ID for tenant repos
gitlab_agent_template_id   = 456  # GitLab project ID for agent template

# Observability
alarm_sns_topic_arn = "arn:aws:sns:eu-west-2:123456789012:platform-alerts"
